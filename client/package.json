{
  "name": "vscode-extension-mvel3-editor",
  "displayName": "Mvel3 Editor",
  "description": "Edit Mvel3 (MVFLEX Expression Language) files",
  "publisher": "mvel",
  "version": "3.0.0-alpha1",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkobayas/mvel-lsp.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mvel3"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.vscode-extension-mvel3-editor",
        "title": "Mvel3"
      }
    ],
    "languages": [
      {
        "id": "mvel3",
        "aliases": [
          "MVEL3",
          "mvel3"
        ],
        "extensions": [
          ".mvel"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mvel3",
        "scopeName": "source.mvel3",
        "path": "./syntaxes/mvel3.tmLanguage"
      }
    ],
    "javaExtensions": [
      "./lib/mvel3-lsp-server-jar-with-dependencies.jar"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "pack:dev": "node -e \"require('fs').mkdirSync('dist',{ recursive: true });\" && vsce package --githubBranch main -o ./dist/"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.0.0",
    "glob": "^11.0.0",
    "mocha": "^11.2.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
